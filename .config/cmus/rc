# Dracula-like theme for cmus
set color_cmdline_bg=default
set color_cmdline_fg=white
set color_error=lightred
set color_info=lightmagenta
set color_separator=lightgray
set color_statusline_bg=default
set color_statusline_fg=white
set color_titleline_bg=default
set color_titleline_fg=lightmagenta
set color_win_bg=default
set color_win_fg=white
set color_win_cur=lightcyan
set color_win_cur_sel_bg=default
set color_win_cur_sel_fg=lightgreen
set color_win_dir=lightmagenta
set color_win_file=white
set color_win_sel_bg=default
set color_win_sel_fg=lightyellow
set color_win_sym=lightmagenta
set color_win_title_bg=default
set color_win_title_fg=lightmagenta
set color_win_inactive_bg=default
set color_win_inactive_fg=gray

# Use PulseAudio/PipeWire
set output_plugin=pulse

# Keybindings tweaks (optional; leave defaults mostly)
bind browser-search forward-slash
